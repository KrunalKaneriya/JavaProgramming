<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.krunalkaneria.todolist.DialogController"
            prefHeight="400.0" prefWidth="600.0">
<!--    <headerText>-->
<!--    </headerText>-->

    <content>
        <GridPane hgap = "10" vgap="10">
            <Label text = "Short Description: " GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="shortdescription" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label  text="Details: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextArea fx:id="detailsArea" GridPane.columnIndex="1" GridPane.rowIndex="1" wrapText="true"/>
            <Label text="DeadLine: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="deadlinePicker" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        </GridPane>
    </content>
</DialogPane>
