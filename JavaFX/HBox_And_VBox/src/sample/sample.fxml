<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<BorderPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml" >
    <top>
        <Label text="This text is in the top position" alignment="CENTER"
            style="-fx-border-color:blue; -fx-border-width:4; -fx-border-style:dashed"
               BorderPane.alignment="CENTER"/>
    </top>
    <left>
        <Label text="This text is in the left position" alignment="CENTER"/>
    </left>
    <right>
        <Label text="This text is in the Right position" alignment="CENTER"/>
    </right>
    <center>
        <Label text="This text is in the Center position"/>
    </center>
    <bottom>
    <HBox spacing="10" alignment="bottom_center">
        <padding>
            <Insets bottom="10" right="10"/>
        </padding>
        <Button text = "Okay" prefWidth="90" />
        <Button text = "Cancel" prefWidth="90"/>
        <Button text="Help" prefWidth="90"/>
    </HBox>
    </bottom>
</BorderPane>