<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>

<?import javafx.scene.control.Label?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <TextField GridPane.rowIndex="0" GridPane.columnIndex="0" fx:id = "nameField" onKeyReleased="#handleKeyRelease"/>
    <Button fx:id = "helloButton" GridPane.rowIndex="1" GridPane.columnIndex="0" text="Say Hello" onAction="#onButtonClicked" />
    <Button fx:id="byeButton" GridPane.rowIndex = "1" GridPane.columnIndex="1" text = "Say Bye" onAction="#onButtonClicked"/>
    <CheckBox fx:id = "ourcheckBox" GridPane.rowIndex = "2" GridPane.columnSpan="2" text = "Clear the Text after Pressing Any Button."
        onAction="#checkBoxstate"/>
    <Label fx:id = "ourLabel" text = "Nothing has happened.." GridPane.rowIndex="3" GridPane.columnIndex="0"/>
</GridPane>