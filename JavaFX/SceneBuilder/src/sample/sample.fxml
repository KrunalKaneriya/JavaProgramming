<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <HBox spacing="10.0" GridPane.rowIndex="1">
      <children>
         <Button mnemonicParsing="false" onAction="#handleAction" text="OK" />
         <Button mnemonicParsing="false" text="Cancel">
         </Button>
         <Button mnemonicParsing="false" text="Help" />
      </children>
   </HBox>
   <Label fx:id="label" text="My Label" />
</GridPane>
